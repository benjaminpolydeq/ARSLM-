# MANIFEST.in - Specifies additional files to include in the distribution

# Documentation
include README.md
include LICENSE
include CHANGELOG.md
include CONTRIBUTING.md
include CODE_OF_CONDUCT.md

# Configuration files
include pyproject.toml
include setup.py
include setup.cfg
include requirements.txt
include requirements-dev.txt

# Type hints
include arslm/py.typed

# Configuration files in package
recursive-include arslm *.json
recursive-include arslm *.yaml
recursive-include arslm *.yml
recursive-include arslm *.toml

# Model files
recursive-include arslm/models *.pt
recursive-include arslm/models *.bin
recursive-include arslm/models *.safetensors
recursive-include arslm/config *.json

# Documentation
recursive-include docs *.md
recursive-include docs *.rst
recursive-include docs *.png
recursive-include docs *.jpg
recursive-include docs *.svg

# Examples
recursive-include examples *.py
recursive-include examples *.ipynb
recursive-include examples *.md

# Exclude unnecessary files
recursive-exclude tests *
recursive-exclude .github *
recursive-exclude scripts *
exclude .gitignore
exclude .gitattributes
exclude .editorconfig
exclude .pre-commit-config.yaml
exclude tox.ini
exclude .coveragerc

# Exclude compiled Python files
global-exclude __pycache__
global-exclude *.py[co]
global-exclude .DS_Store
global-exclude *.so
global-exclude *.dylib
global-exclude *.dll

# Exclude development files
global-exclude .pytest_cache
global-exclude .mypy_cache
global-exclude .tox
global-exclude *.egg-info